---
interface Props {
	title?: string;
	description?: string;
}

const { title = "DT —— Motion Designer", description = "Portfolio of Daniel Tolani - Motion & Interaction Designer" } = Astro.props;

import PageTransition from '../components/PageTransition.astro';

// Get the site URL from environment or construct from request
const cloudName = import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME;
const metaImage = `https://res.cloudinary.com/${cloudName}/image/upload/f_auto,q_auto/META-IMAGE_qlrqtf.png`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={metaImage} />

		<!-- X (Twitter) -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url.href} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={metaImage} />
    
		<link rel="stylesheet" href="/font/stylesheet.css">
	</head>
	<body data-barba="wrapper">
		<PageTransition />
    <div data-barba="container" data-barba-namespace="default">
		  <slot />
    </div>
	</body>
</html>

<script>
  // @ts-ignore
  import barba from '@barba/core';
  import { gsap } from "gsap";

  barba.init({
    // @ts-ignore
    prevent: ({ el }) => el.classList && el.classList.contains('prevent-barba'),
    transitions: [{
      name: 'default-transition',
      // @ts-ignore
      async leave(data) {
        // Trigger exit animation
        if ((window as any).pageTransition) {
           await (window as any).pageTransition.animateTrailExit();
        }
        return gsap.to(data.current.container, { opacity: 0, duration: 0.5 });
      },
      // @ts-ignore
      enter(data) {
        if ((window as any).pageTransition) {
           (window as any).pageTransition.animateTrailEnter();
        }
        return gsap.from(data.next.container, { opacity: 0, duration: 0.5 });
      },
      afterEnter() {
        // Re-initialize scripts that depend on page load
        // We might need to dispatch a custom event or call init functions directly
        // Dispatch 'astro:page-load' to reuse existing logic
        document.dispatchEvent(new Event('astro:page-load'));
      }
    }]
  });
</script>

<style is:global>
	*, *::before, *::after {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
	}

	body {
		font-family: 'Suisse Int\'l', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>
